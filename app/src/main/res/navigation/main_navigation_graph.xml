<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.practicum.imdb_api.ui.movie_info_fragment.MovieDetailsFragment"
        android:label="movie_details_fragment"
        tools:layout="@layout/movie_details_fragment" />
    <fragment
        android:id="@+id/castFragment"
        android:name="com.practicum.imdb_api.ui.cast_fragment.CastFragment"
        android:label="cast_fragment"
        tools:layout="@layout/cast_fragment" />
    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.practicum.imdb_api.ui.movies_fragment.MovieListFragment"
        android:label="movie_list_fragment"
        tools:layout="@layout/movie_list_fragment" >
        <action
            android:id="@+id/action_movieListFragment_to_movieInfoFragment"
            app:destination="@id/movieInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/personsListFragment"
        android:name="com.practicum.imdb_api.ui.persons_fragment.PersonsListFragment"
        android:label="persons_fragment"
        tools:layout="@layout/persons_fragment" />
    <fragment
        android:id="@+id/movieInfoFragment"
        android:name="com.practicum.imdb_api.ui.movie_info_fragment.MovieInfoFragment"
        android:label="movie_info_fragment"
        tools:layout="@layout/movie_info_fragment" >
        <action
            android:id="@+id/action_movieInfoFragment_to_castFragment"
            app:destination="@id/castFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.practicum.imdb_api.ui.history_fragment.HistoryFragment"
        android:label="HistoryFragment"
        tools:layout="@layout/history_fragment" />
</navigation>